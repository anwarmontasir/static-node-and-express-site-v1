extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1 #{project.project_name}

        p #{project.description}

      .project-tech-links-box.box
        h6 Technologies
        ul

          each technology in project.technologies
            li #{technology}

        //- Add the href values to the links below
        a.btn-link(href=`${project.live_link}`, target="_blank") Live Demo

    .project-img-box.box

      each landscapeImg in landscape 
        img.project-img(src=`${landscapeImg}`, alt=`${project.description} screenshot`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
